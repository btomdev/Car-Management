{% extends 'base.html.twig' %}

{% block body %}
    {% block fos_user_content %}

    <main class="container">

        <div class="row">
            <div class="col-md-8 offset-md-2 mt-4">
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register text-dark text-center'}}) }}

                <h1 class="h3 mb-3 fw-normal text-center">Inscription</h1>

                {{ form_errors(form.email) }}
                {{ form_label(form.email, null, {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}

                {{ form_label(form.username, null, {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}

                {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}

                {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control mb-4'}}) }}

                <div>
                    <input type="submit" class="w-100 btn btn-lg btn-dark" value="S'inscrire" />
                </div>
                {{ form_errors(form) }}
                {{ form_end(form) }}
            </div>
        </div>

    </main>

    {% endblock %}
{% endblock %}
